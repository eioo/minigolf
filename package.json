{
  "name": "minigolf",
  "description": "Remake of the past Playforia.net/Aapeli.com minigolf",
  "version": "0.0.0",
  "repository": "github:eioo/minigolf",
  "bugs": "https://github.com/eioo/minigolf/issues",
  "license": "MIT",
  "scripts": {
    "dev:vite": "vite",
    "dev:server": "vite-node -w src/server/index.ts",
    "dev": "concurrently -n vite,server -c cyan,green \"npm run dev:vite\" \"npm run dev:server\"",
    "build": "tsc && vite build",
    "serve": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.62.1",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "wouter": "^2.10.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-client": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "concurrently": "^8.0.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "tslog": "^4.8.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vite-node": "^0.31.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
